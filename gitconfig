[user]
	name = Patrick Ward
	email = patrick@patrickward.com
[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  head = !git l -1
  h = !git head
  r = !git --no-pager l -20
  ra = !git r --all
  ff = merge --ff-only
  pullff = pull -ff-only
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  pom = push origin master
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	editor = vim
[apply]
	whitespace = nowarn
[format]
;	pretty = %C(yellow)%h%Creset %s
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[merge]
  tool = vimdiff
