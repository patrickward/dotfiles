[init]
  templatedir = ~/.git/templates
[alias]
	st = status
	co = checkout
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	dog = log --all --decorate --oneline --graph
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[core]
	editor = vim
	excludesfile = /Users/patrickward/.gitignore
[apply]
	whitespace = nowarn
[merge]
	tool = vimdiff
[push]
	default = simple
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[credential]
	helper = osxkeychain
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
