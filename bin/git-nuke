#!/bin/bash
# Nukes a branch locally and on the origin remote.
#
# $1 - Branch name.
#
# Examples
#
#   git nuke add-git-nuke

. "$DOTFILES/lib/utils.sh"

usage() {
  echo ""
  echo "usage:"
  echo ""
  echo "git-nuke <branch-name>"
  echo ""
  exit 1
}
[ $# -eq 0 ] && usage

ask "This can't be undone. Are you sure? "

if [[ $REPLY =~ ^y|Y ]]; then
  git branch -D "$1"
  git push origin :"$1"
  okay "NUKED!"
fi
