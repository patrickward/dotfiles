#!/usr/bin/env bash
#
# Mounts the FINANCE VeraCrypt volume

# Prompt for volumes password
echo -n Password:
read -r -s password

# VeraCrypt
veracrypt='/Applications/VeraCrypt.app/Contents/MacOS/VeraCrypt -t --non-interactive'
$veracrypt --protect-hidden=no -p "$password" $HOME/Documents/_/finance.vc /Volumes/FINANCE


