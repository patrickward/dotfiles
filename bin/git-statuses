#!/bin/bash

# Function to display detailed information
show_details() {
  local dir="$1"
  local branch=$(git rev-parse --abbrev-ref HEAD)
  local status="clean"
  local emoji="ðŸŸ¢"

  if ! git diff --quiet || ! git diff --cached --quiet; then
    status="dirty"
    emoji="ðŸ”´"
  fi

  echo "$emoji $status: $dir ($branch)"
}

# Function to check if a repo is dirty
check_dirty() {
  local dir="$1"
  local branch=$(git rev-parse --abbrev-ref HEAD)
  if ! git diff --quiet || ! git diff --cached --quiet; then
    echo "ðŸ”´ dirty: $dir ($branch)"
  fi
}

# Main script
verbose=0

# Check for the verbose flag
if [[ $1 == "-v" ]]; then
  verbose=1
fi

for dir in */; do
  if [ -d "$dir/.git" ]; then
    cd "$dir"
    if [ $verbose -eq 1 ]; then
      show_details "$dir"
    else
      check_dirty "$dir"
    fi
    cd ..
  fi
done

