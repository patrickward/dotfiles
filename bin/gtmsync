#!/usr/bin/env sh

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

if [ ! -d ".gtm" ]; then
  echo "\n${RED}This directory does not appear to be a GTM initialized repo. \nMake sure you are in a git repo and gtm init has been run first.${NC}\n"
  exit 1
fi

echo "${GREEN}Fetching and merging...${NC}"
git fetch origin refs/notes/gtm-data:refs/notes/origin/gtm-data
git notes --ref gtm-data merge -v origin/gtm-data
git pushgtm
echo "${GREEN}Done.${NC}"

