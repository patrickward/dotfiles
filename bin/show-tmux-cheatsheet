#!/usr/bin/env bash
#
# Shows my personal tmux cheatsheet for this setup

# shellcheck source=./includes/colors.sh
source "$DOTDIR/bin/includes/colors.sh"

echo ""
echo_green "TMUX Cheatsheet"
echo ""
echo_blue "Prefix: " "control + a"
echo_blue "Split window vertically: " "prefix + -"
echo_blue "Split window horizontally:" "prefix + \\ "
echo_blue "Reload config: " "prefix + r"
echo_blue "Select panes: " "control + {h,j,k,l} (no prefix necessary)"
echo_blue "Resize panes: " "shift + {arrows} (no prefix necessary)"
echo_blue "Create a new window in current directory: " "prefix + c"
echo_blue "Break out the current pane into a new window: " "prefix + b"
echo_blue "Choose a session: " "prefix + control + j"
