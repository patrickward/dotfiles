#!/usr/bin/env bash
#
# Shows my personal tmux cheatsheet for this setup

. "$DOTFILES/lib/utils.sh"

echo ""
okay "TMUX Cheatsheet"
echo ""
echo "Prefix: control + a"
echo "Split window vertically: prefix + -"
echo "Split window horizontally: prefix + \\ "
echo "Reload config: prefix + r"
echo "Select panes: control + {h,j,k,l} (no prefix necessary)"
echo "Resize panes: shift + {arrows} (no prefix necessary)"
echo "Create a new window in current directory: prefix + c"
echo "Choose a session: prefix + control + j"
echo "Break out the current pane into a new window: prefix + b"
echo "Break into a new session from current pane: prefix + control + b"
echo "Kill current session; switch to next session: prefix + shift + k"
