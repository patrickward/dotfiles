#!/usr/bin/env bash
#
# From: https://github.com/holman/dotfiles with some modifications
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
dotfilesDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

displayUsageAndExit() {
	echo "dotupdate -- dotfiles management"
	echo ""
	echo "Usage: dotupdate [options]"
	echo ""
	echo "Options:"
	echo "  -e, --edit    Open dotfiles directory for editing"
	echo "  -h, --help    Show this help message and exit"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help")
			displayUsageAndExit
			;;
		"-e"|"--edit")
			exec "$EDITOR" "$dotfilesDirectory"
			exit
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

# Redundant - already set in zshrc
# export DOTDIR=$HOME/.dotfiles

# Set macOS defaults
if [[ "$(uname -s)" == "Darwin" ]];
then
  echo "› Setting macos defaults"
  "$DOTDIR"/macos/set-defaults.sh

  # Install homebrew
  "$DOTDIR"/homebrew/install.sh 2>&1

  # Upgrade homebrew
  echo "› brew update"
  brew update

  read -p "› Run brew bundle? (y/n)" -r -s -n 1 action
  if [[ $action == "y" ]]; then
    echo ""
    echo "› brew bundle"
    cd "$(dirname "$0")"/..
    brew bundle
  fi

  echo ""
  read -p "› Run brew upgrade? (y/n)" -r -s -n 1 action
  if [[ $action == "y" ]]; then
    echo ""
    echo "› brew upgrade"
    cd "$(dirname "$0")"/..
    brew upgrade
  fi
  echo ""
  read -p "› Run brew cleanup? (y/n)" -r -s -n 1 action
  if [[ $action == "y" ]]; then
    echo ""
    echo "› brew cleanup"
    cd "$(dirname "$0")"/..
    brew cleanup
  fi
fi
